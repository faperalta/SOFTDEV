<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table3"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    tools:context="apc.softdev.modernizedorderingsystem.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Display Here"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Display Here"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Display Here"
            android:textSize="14sp"
            android:textStyle="bold" />

        <SurfaceView
            android:id="@+id/cameraPreview"
            android:layout_width="650px"
            android:layout_height="550px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:hint=" Please scan QR Code "
            android:background="@drawable/custom_text_bg"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="24sp" />

        <Button
            android:id="@+id/log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/revoke"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_button"
            android:onClick="LogOut"
            android:text="LOGOUT" />

        <Button
            android:id="@+id/revoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtResult"
            android:layout_marginStart="12dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/custom_button"
            android:onClick="Revoke"
            android:text="DEACTIVATE" />

    </RelativeLayout>

</LinearLayout>
